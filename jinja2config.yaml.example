# Example jinja2config.yaml
# Place this file as "jinja2config.yaml" in your Home Assistant config directory
# These variables will be available to all your .yaml.jinja templates

# Simple variables
house_name: "My Smart Home"
default_temperature: 20
default_humidity: 50

# Lists
rooms:
  - name: "Living Room"
    id_prefix: "living_room"
    size: 30
    kp: 100
    ki: 0.01
    kd: 2500
  - name: "Bedroom"
    id_prefix: "bedroom"
    size: 20
    kp: 100
    ki: 0.001
    kd: 1000
  - name: "Kitchen"
    id_prefix: "kitchen"
    size: 15
    kp: 100
    ki: 0.005
    kd: 1500

# Dictionaries
heating_zones:
  living_room: "zone_1"
  bedroom: "zone_2"
  kitchen: "zone_3"

temperature_presets:
  min: 7
  max: 25
  away: 7
  eco: 17
  sleep: 17
  comfort: 19
  boost: 21

# Network configuration
network:
  domain: "example.com"
  mqtt_broker: "192.168.1.100"
  mqtt_port: 1883

# Device IDs
devices:
  thermostat_model: "generic"
  sensor_prefix: "esphome"
