# Example jinja2config.yaml
# Place this file as "jinja2config.yaml" in your Home Assistant config directory
# These variables will be available to all your .yaml.jinja templates

# Simple variables
house_name: "My Smart Home"
default_temperature: 20
default_humidity: 50

# Lists
rooms:
  - name: "Living Room"
    id_prefix: "living_room"
    size: 30
    kp: 100
    ki: 0.01
    kd: 2500
  - name: "Bedroom"
    id_prefix: "bedroom"
    size: 20
    kp: 100
    ki: 0.001
    kd: 1000
  - name: "Kitchen"
    id_prefix: "kitchen"
    size: 15
    kp: 100
    ki: 0.005
    kd: 1500

# Dictionaries
heating_zones:
  living_room: "zone_1"
  bedroom: "zone_2"
  kitchen: "zone_3"

temperature_presets:
  min: 7
  max: 25
  away: 7
  eco: 17
  sleep: 17
  comfort: 19
  boost: 21

# Network configuration
network:
  domain: "example.com"
  mqtt_broker: "192.168.1.100"
  mqtt_port: 1883

# Device IDs
devices:
  thermostat_model: "generic"
  sensor_prefix: "esphome"

# Skipped files - templates that should NOT be compiled
# Use .skipped_files to prevent specific template files from being processed
# The path is relative to your Home Assistant config directory
.skipped_files:
  - automations/disabled.yaml.jinja
  - packages/experimental.yaml.jinja
  - test/debug.yaml.jinja

# File-specific configurations
# Use .file_configs to override variables for specific template files
# The path is relative to your Home Assistant config directory
# These configs are deep-merged with the global config above
.file_configs:
  # Example: Override variables for a specific automation file
  automations/heating.yaml.jinja:
    default_temperature: 22  # Override global default_temperature for this file
    rooms:  # This will be deep-merged with the global rooms list above
      - name: "Garage"
        id_prefix: "garage"
        size: 25
        kp: 80
        ki: 0.002
        kd: 800
  
  # Example: Add file-specific variables
  packages/lights.yaml.jinja:
    light_transition_time: 2
    light_brightness_default: 200
